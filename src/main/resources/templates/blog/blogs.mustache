{{>header}}
<!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">-->

<div class="container-fluid">
    <div class="container">
        <button type="button" id="blogAddBtn"  class="btn btn-sm btn-info m-r-5" style="display:none;">
            <i class="fa fa-plus"></i> <!--<i data-domain-id="MENU_ADD_BTN" >-->글 추가</i>
        </button>



        <table class="table">
            <thead>
            <tr>

                <th scope="col">title</th>
            </tr>
            </thead>
            <tbody>
            {{#list}}
                <tr>

                    <th scope="row"><a href="/blogs/{{idx}}" style="text-decoration:none; color:black;">{{title}}</a></th>
                </tr>
            {{/list}}

            </tbody>
        </table>
        <form>
            <div class="row mb-3">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" id="blogIdx" value="{{detail.idx}}" readonly>
                    <input type="text" class="form-control" id="blogTitle" value="{{detail.title}}" readonly style="background-color:white; border:0px;font-size:50px;text-align:center;">
                    <input type="hidden" class="form-control" id="blogContentHidden" value="{{detail.markdownContent}}" readonly>
                </div>
            </div>
        </form>
    </div>





        <div id="blogViewMarkdown" class="container col-xs-w100" >

        </div>
        <div id="blogUpdateMarkdown" class="container  col-xs-w100" style="display:none;">

        </div>

    <div class="container" style="padding-top:30px;">
        <div class="col-xs-w50">
            <button type="button" id="blogUpdateBtn" class="btn btn-sm btn-warning m-r-5" style="display:none">
                <i class="fa fa-minus"></i>수정하기</i>
            </button>
            <button type="button" id="blogDeleteBtn"  class="btn btn-sm btn-danger m-r-5" style="display:none;">
                <i class="fa fa-minus"></i>글삭제</i>
            </button>
            <button type="button" id="blogSaveBtn"  class="btn btn-sm btn-success" style="display:none;">
                <i class="fa fa-download"></i>저장</i>
            </button>
            <button type="button" id="blogCancelBtn" class="btn btn-sm btn-default" style="display:none;">
                <i class="fa fa-download"></i>작성취소</i>
            </button>
        </div>

    </div>
    <div class="container" style="padding-top:30px;">

        <div id="blogRe" style="padding:20px 10px; margin-top:30px;">


        </div>
    </div>
</div>


<!--<script src="/js/core/simplemde.min.js"></script>-->
{{>footerJs}}

<script src="/js/core/toastui-editor-all.min.js"></script>

<script >
const editor = new toastui.Editor({
    el: document.querySelector('#blogUpdateMarkdown'),
    initialEditType: "wysiwyg",
    height: '500px',
});
const viewer = toastui.Editor.factory({
    el: document.querySelector('#blogViewMarkdown'),
    initialEditType: "wysiwyg",
    viewer: true,
    height: '500px'
});

viewer.setMarkdown($('#blogContentHidden').val());




</script>

<script src="/js/app/blog/blogs.js"></script>
{{>footer}}